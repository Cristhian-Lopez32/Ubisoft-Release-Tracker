{
  "info": {
    "name": "Backend MongoDB JWT Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "backend-jwt-tests"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"pruebaMongo\",\n  \"email\": \"mongo@test.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/auth/register",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "api",
            "auth",
            "register"
          ]
        }
      }
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"identifier\": \"mongo@test.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/auth/login",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Get User Info (/me)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:4000/api/auth/me",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "api",
            "auth",
            "me"
          ]
        }
      }
    },
    {
      "name": "Create Event",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Evento Atlas\",\n  \"date\": \"2025-11-12\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/events",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "api",
            "events"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "try {",
              "  var jsonData = pm.response.json();",
              "  var id = null;",
              "  if (jsonData.event) {",
              "    id = jsonData.event._id || jsonData.event.id || jsonData.event._doc && jsonData.event._doc._id;",
              "  }",
              "  if (!id && jsonData._id) id = jsonData._id;",
              "  if (id) { pm.environment.set('event_id', id); console.log('event_id saved:', id); }",
              "} catch(e) { console.log('No event id found:', e); }"
            ]
          }
        }
      ]
    },
    {
      "name": "Get All Events",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:4000/api/events",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "api",
            "events"
          ]
        }
      }
    },
    {
      "name": "Update Event",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Evento Atlas - actualizado\",\n  \"date\": \"2025-12-01\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/events/{{event_id}}",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "api",
            "events",
            "{{event_id}}"
          ]
        }
      }
    },
    {
      "name": "Delete Event",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:4000/api/events/{{event_id}}",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "api",
            "events",
            "{{event_id}}"
          ]
        }
      }
    }
  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Guarda token autom\u00e1ticamente tras el login",
          "if (pm.request.url.includes('/login')) {",
          "   var jsonData = pm.response.json();",
          "   pm.environment.set('jwt_token', jsonData.token);",
          "}"
        ]
      }
    }
  ]
}